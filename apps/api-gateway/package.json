{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Running Coach with WhatsApp integration",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "npm run build && nodemon --exec node dist/app.js",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@builderbot/bot": "1.2.2",
    "@builderbot/provider-meta": "1.2.2",
    "@running-coach/database": "workspace:*",
    "@running-coach/llm-orchestrator": "workspace:*",
    "@running-coach/plan-generator": "workspace:*",
    "@running-coach/shared": "workspace:*",
    "@running-coach/vector-memory": "workspace:*",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.31.0",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "reflect-metadata": "^0.2.1",
    "tsyringe": "^4.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.2",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.52.0",
    "nodemon": "^3.1.0",
    "rollup": "^4.10.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.4.3",
    "vitest": "^1.0.0"
  }
}