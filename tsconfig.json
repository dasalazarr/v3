{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"],
      "@running-coach/shared": ["./packages/shared/src"],
      "@running-coach/shared/*": ["./packages/shared/src/*"],
      "@running-coach/database": ["./packages/database/src"],
      "@running-coach/database/*": ["./packages/database/src/*"],
      "@running-coach/llm-orchestrator": ["./packages/llm-orchestrator/src"],
      "@running-coach/llm-orchestrator/*": ["./packages/llm-orchestrator/src/*"],
      "@running-coach/vector-memory": ["./packages/vector-memory/src"],
      "@running-coach/vector-memory/*": ["./packages/vector-memory/src/*"],
      "@running-coach/plan-generator": ["./packages/plan-generator/src"],
      "@running-coach/plan-generator/*": ["./packages/plan-generator/src/*"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**e2e**",
    "**mock**"
  ]
}